{
  "critical_levels": {
    "pH_low": 5.5,
    "pH_high": 8.5,

    "EC_high": 2.0,

    "Zn_critical": 0.60,
    "Fe_critical": 4.50,
    "S_critical": 10.00
  },

  "soil_fertility_thresholds": {
    "meta": {
      "description": "Standardized soil fertility calibration for Indian agro-ecological zones.",
      "source": "Precision Nutrient Management Architectures",
      "tables_used": ["Table 1", "Table 2"]
    },

    "organic_carbon": {
      "parameter": "Organic Carbon",
      "method": "Walkley & Black (Wet Oxidation)",
      "unit": "%",
      "thresholds": {
        "low":   { "max": 0.50 },
        "medium":{ "min": 0.50, "max": 0.75 },
        "high":  { "min": 0.75 }
      }
    },

    "macronutrients": {
      "nitrogen": {
        "parameter": "Available Nitrogen (N)",
        "method": "Alkaline KMnO4",
        "unit": "kg/ha",
        "thresholds": {
          "low":   { "max": 280 },
          "medium":{ "min": 280, "max": 560 },
          "high":  { "min": 560 }
        }
      },

      "phosphorus_alkaline": {
        "parameter": "Available Phosphorus (P)",
        "condition": "Soil pH > 6.5",
        "method": "Olsen Extraction",
        "unit": "kg/ha",
        "thresholds": {
          "low":   { "max": 11 },
          "medium":{ "min": 11, "max": 22 },
          "high":  { "min": 22 }
        }
      },

      "phosphorus_acidic": {
        "parameter": "Available Phosphorus (P)",
        "condition": "Soil pH < 6.5",
        "method": "Bray No. 1",
        "unit": "kg/ha",
        "thresholds": {
          "low":   { "max": 9 },
          "medium":{ "min": 9, "max": 20 },
          "high":  { "min": 20 }
        }
      },

      "potassium": {
        "parameter": "Available Potassium (K)",
        "method": "Neutral Ammonium Acetate (NH4OAc)",
        "unit": "kg/ha",
        "thresholds": {
          "low":   { "max": 118 },
          "medium":{ "min": 118, "max": 280 },
          "high":  { "min": 280 }
        }
      }
    },

    "micronutrients": {
      "logic": "If value < critical_limit, status = Deficient",

      "zinc": {
        "parameter": "Zinc (Zn)",
        "method": "DTPA Extractable",
        "unit": "ppm",
        "critical_limit": 0.60,
        "alternate_threshold_rw": 0.80,
        "note": "Use 0.80 ppm for Rice-Wheat System"
      },

      "iron": {
        "parameter": "Iron (Fe)",
        "method": "DTPA Extractable",
        "unit": "ppm",
        "critical_limit": 4.50
      },

      "manganese": {
        "parameter": "Manganese (Mn)",
        "method": "DTPA Extractable",
        "unit": "ppm",
        "critical_limit": 2.00
      },

      "copper": {
        "parameter": "Copper (Cu)",
        "method": "DTPA Extractable",
        "unit": "ppm",
        "critical_limit": 0.20
      },

      "boron": {
        "parameter": "Boron (B)",
        "method": "Hot Water Extraction",
        "unit": "ppm",
        "critical_limit": 0.50
      },

      "sulphur": {
        "parameter": "Sulphur (S)",
        "method": "0.15% CaCl2",
        "unit": "ppm",
        "critical_limit": 10.00
      }
    }
  }
}
